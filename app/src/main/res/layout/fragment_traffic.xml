<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.quinn.sakay.TrafficFragment"
    xmlns:app="http://schemas.android.com/apk/res-auto" >

    <!-- TODO: Update blank fragment layout -->
    <com.google.android.gms.maps.MapView  xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        class="com.google.android.gms.maps.SupportMapFragment"
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        map:cameraBearing="112.5"
        map:cameraTargetLat="9.306840"
        map:cameraTargetLng="123.305447"
        map:cameraTilt="30"
        map:cameraZoom="17"

        />

    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/fabTraffic"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="12dp"
        android:layout_marginRight="16dp"
        fab:menu_labels_ellipsize="end"
        fab:menu_labels_singleLine="true"
        fab:menu_fab_label="Report Traffic"
        fab:menu_icon="@drawable/ic_alert"
        fab:menu_colorNormal="@color/colorPrimary"
        fab:menu_colorPressed="@color/colorPrimaryDark" >
        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fabHigh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_alert3"
            fab:fab_size="mini"
            fab:fab_label="High Traffic"
            fab:fab_colorNormal="@color/white"
            fab:fab_colorPressed="@color/lightGray"
            />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fabModerate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_alert2"
            fab:fab_size="mini"
            fab:fab_label="Moderate Traffic"
            fab:fab_colorNormal="@color/white"
            fab:fab_colorPressed="@color/lightGray"
            />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fabLow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_alert1"
            fab:fab_size="mini"
            fab:fab_label="Low Traffic"
            fab:fab_colorNormal="@color/white"
            fab:fab_colorPressed="@color/lightGray"
            />
    </com.github.clans.fab.FloatingActionMenu>


</RelativeLayout>
