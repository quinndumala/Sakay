            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="0.9"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_weight="0.3">

                    <ImageView
                        android:id="@+id/account_reputation_icon"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:src="@drawable/reputation_none"/>
                    <TextView
                        android:id="@+id/account_reputation_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="No ratings"
                        android:layout_marginTop="10dp"
                        android:gravity="center"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/account_offers_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="0.3"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/account_offers_icon"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:src="@drawable/ride_offers_icon"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
