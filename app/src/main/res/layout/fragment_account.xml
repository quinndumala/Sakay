    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.quinn.sakay.AccountFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/account_user_photo"
            android:layout_width="match_parent"
            android:layout_height="225dp"
            android:src="@drawable/ic_profile_photo"/>

        <android.support.v7.widget.CardView
            android:id="@+id/account_name_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_below="@id/account_user_photo">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/profile_user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="User Name"
                        android:textSize="26dp"
                        android:layout_gravity="center"
                        style="@style/TextAppearance.AppCompat.Title"/>

                    <TextView
                        android:id="@+id/profile_user_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="username@email.com"
                        android:textSize="16dp"
                        android:layout_gravity="center"
                        />

                    <Button
                        android:id="@+id/sign_out_button"
                        android:layout_width="180dp"
                        android:layout_height="42dp"
                        android:text="Sign Out"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        style="@style/Widget.AppCompat.Button.Colored"
                        />

                </LinearLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

