<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_account_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.quinn.sakay.AccountFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView android:id="@+id/account_name_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_user_photo"
                    android:layout_width="105dp"
                    android:layout_height="105dp"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/ic_profile_photo"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/profile_user_photo"
                    android:layout_marginTop="22dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/profile_user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="User Name"
                        android:textSize="20dp"
                        android:layout_gravity="center"
                        style="@style/TextAppearance.AppCompat.Title"/>

                    <Button
                        android:id="@+id/sign_out_button"
                        android:layout_width="180dp"
                        android:layout_height="42dp"
                        android:text="Sign Out"
                        android:layout_below="@id/profile_user_name"
                        android:layout_gravity="center"
                        style="@style/Widget.AppCompat.Button.Colored"
                        />

                </LinearLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_below="@id/account_name_view">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/view_profile_rating_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No ratings yet."
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/view_profile_rating_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="0.0"
                    android:textColor="@color/black"
                    android:textSize="50sp"
                    android:layout_marginBottom="10dp"
                    android:visibility="gone"/>
                <ImageView
                    android:id="@+id/view_profile_rating_stars"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:src="@drawable/ratings_none"
                    android:layout_marginBottom="16dp"
                    android:visibility="gone"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </RelativeLayout>


    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:visibility="gone"
        >

        <!--<ImageView-->
            <!--android:layout_gravity="center"-->
            <!--android:id="@+id/profile_user_photo"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"/>-->



        <Space
            android:layout_width="1dp"
            android:layout_height="8dp" />
        <TextView
            android:id="@+id/profile_user_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_centerHorizontal="true"
            />
        <Space
            android:layout_width="1dp"
            android:layout_height="20dp" />

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>
