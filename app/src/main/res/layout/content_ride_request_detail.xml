<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_ride_request_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.quinn.sakay.RideRequestDetailActivity"
    tools:showIn="@layout/activity_ride_request_detail">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        >

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/request_detail_view"
            android:layout_marginBottom="10dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="@style/NoPaddingBottom">
                <include
                    android:id="@+id/ride_request_author_layout"
                    layout="@layout/include_post_author_large"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true" />

                <Space
                    android:id="@+id/request_detail_space"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:layout_below="@id/ride_request_author_layout"/>

                <include
                    android:id="@+id/ride_request_text_layout"
                    layout="@layout/include_ride_request_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/request_detail_space"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp" />

                <LinearLayout
                    android:id="@+id/request_detail_buttons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@+id/ride_request_text_layout"
                    android:layout_marginTop="20dp"
                    android:weightSum="1.0">

                    <Button
                        android:id="@+id/button_see_route_request"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="1dp"
                        style="@style/Widget.AppCompat.Button.Colored"
                        android:text="See in map" />

                    <Button
                        android:id="@+id/button_sakay_request"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/Widget.AppCompat.Button.Colored"
                        android:visibility="gone"
                        android:text="offer sakay"/>
                </LinearLayout>

                <Space
                    android:id="@+id/request_detail_space_view"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_below="@id/request_detail_buttons"/>

                <ImageView
                    android:id="@+id/button_request_detail_delete"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/ic_delete"
                    android:layout_alignParentRight="true"
                    android:focusable="true"
                    android:visibility="gone"/>
            </RelativeLayout>

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/request_responses_text_view"
            android:layout_below="@id/request_detail_view"
            android:visibility="gone">
            <TextView
                android:paddingLeft="20dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Responses"
                android:textSize="@dimen/ampm_label_size"/>
        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/no_responses_text_view_request"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_below="@id/request_responses_text_view"
            android:text="No responses yet"
            android:textSize="@dimen/ampm_label_size"
            android:visibility="gone"/>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/responses_view_request"
            android:layout_below="@id/request_responses_text_view"
            android:visibility="gone">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_request_comment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="36dp"
                android:layout_marginLeft="-16dp"
                android:layout_marginRight="-16dp"
                tools:listitem="@layout/item_comment_request" />
        </android.support.v7.widget.CardView>




    </RelativeLayout>
</RelativeLayout>
