<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_ride_request_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.quinn.sakay.RideRequestDetailActivity"
    tools:showIn="@layout/activity_ride_request_detail">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        style="@style/NoPaddingBottom"
        >

        <include
            android:id="@+id/ride_request_author_layout"
            layout="@layout/include_post_author_large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true" />

        <Space
            android:id="@+id/request_detail_space"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_below="@id/ride_request_author_layout"/>

        <include
            android:id="@+id/ride_request_text_layout"
            layout="@layout/include_ride_request_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/request_detail_space"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp" />

        <LinearLayout
            android:id="@+id/comment_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/ride_request_text_layout"
            android:layout_marginTop="20dp">

            <Button
                android:id="@+id/button_sakay"
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_weight="0.2"
                android:layout_height="wrap_content"
                android:text="Sakay"/>

            <Button
                android:id="@+id/button_see_route"
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_weight="0.2"
                android:layout_height="wrap_content"
                android:text="See Route"/>
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_request_comment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="-16dp"
            android:layout_marginRight="-16dp"
            android:layout_below="@id/comment_form"
            tools:listitem="@layout/item_comment" />
    </RelativeLayout>

</RelativeLayout>
