<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <View style="@style/horizontal_divider"
        android:layout_height="1dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingTop="12dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/comment_author_photo_request"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginTop="2dp"
            android:src="@drawable/ic_profile_photo" />

        <LinearLayout
            android:id="@+id/comment_request_text_request"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="-1.5dp"
            android:padding="5dp"
            android:layout_toRightOf="@id/comment_author_photo_request">
            <TextView
                android:id="@+id/comment_author_request"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                tools:text="Username Username" />

            <TextView
                android:id="@+id/comment_vehicle_request"
                style="@style/TextAppearance.AppCompat.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Vehicle information"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/comment_request_text_request"
            android:layout_marginStart="36dp">
            <Button
                android:id="@+id/comment_button_view_profile_request"
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:text="View Profile"
                android:textColor="@color/colorPrimary"
                style="@style/Base.Widget.AppCompat.Button.Borderless"/>
            <Button
                android:id="@+id/comment_button_sakay_request"
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:text="accept"
                android:textColor="@color/colorPrimary"
                style="@style/Base.Widget.AppCompat.Button.Borderless"/>
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>