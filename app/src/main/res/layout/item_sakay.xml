<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/sakay_date_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:text="January 1 2017"
            />
        <View style="@style/horizontal_divider_no_padding"
            android:id="@+id/sakay_date_divider"
            android:layout_height="1dp"
            android:layout_marginStart="-10dp"
            android:layout_marginEnd="-10dp"
            android:layout_below="@id/sakay_date_time"/>
        <LinearLayout
            android:id="@+id/sakay_with_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:layout_below="@id/sakay_date_divider">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sakay with "
                android:textColor="@color/black"
                android:textSize="18sp"
                />
            <TextView
                android:id="@+id/sakay_with_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username Username"
                android:textColor="@color/black"
                android:textSize="18sp"/>
        </LinearLayout>
        <TextView
            android:id="@+id/sakay_places"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:layout_below="@id/sakay_with_text"
            android:text="From start to destination"/>
