<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_add_ride_offer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.quinn.sakay.AddRideOffer"
    tools:showIn="@layout/activity_add_ride_offer">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Starting Point"
                style="@style/NoPaddingRight"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/field_offer_start"
                android:maxLines="1"
                android:focusableInTouchMode="false"
                style="@style/FullWidthEditText"/>
        </LinearLayout>

        <View style="@style/horizontal_divider"
            android:layout_height="1dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Destination"
                style="@style/NoPaddingRight"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/field_offer_destination"
                android:maxLines="1"
                android:focusableInTouchMode="false"
                style="@style/FullWidthEditText"/>
        </LinearLayout>

        <View style="@style/horizontal_divider"
            android:layout_height="1dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Vehicle Information"
            android:id="@+id/field_offer_vehicle"
            android:maxLines="1"
            style="@style/FullWidthEditText"/>


        <!--<View style="@style/horizontal_divider"-->
            <!--android:id="@+id/divider"-->
            <!--android:layout_height="2dp"-->
            <!--android:layout_below="@+id/date_picker"-->
            <!--android:layout_marginTop="4dp"-->
            <!--android:layout_marginBottom="4dp"/>-->
        <View style="@style/horizontal_divider"
            android:layout_height="1dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date and Time"
            android:textSize="@dimen/abc_text_size_subhead_material"
            android:paddingTop="20dp"
            android:paddingLeft="20dp"
            android:paddingBottom="10dp"/>

        <com.simplicityapks.reminderdatepicker.lib.ReminderDatePicker
            android:id="@+id/offer_date_picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"/>


    </LinearLayout>


</FrameLayout>
