<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_add_ride_offer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.quinn.sakay.AddRideOffer"
    tools:showIn="@layout/activity_add_ride_offer">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Starting Point"
                style="@style/NoPaddingRight"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/field_offer_start"
                android:maxLines="1"
                android:ellipsize="end"
                android:focusableInTouchMode="false"
                style="@style/FullWidthEditText"/>
        </LinearLayout>

        <View style="@style/horizontal_divider"
            android:layout_height="1dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Destination"
                style="@style/NoPaddingRight"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/field_offer_destination"
                android:maxLines="1"
                android:ellipsize="end"
                android:focusableInTouchMode="false"
                style="@style/FullWidthEditText"/>
        </LinearLayout>

        <View style="@style/horizontal_divider"
            android:layout_height="1dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vehicle Information"
                android:textSize="@dimen/abc_text_size_subhead_material"
                android:textColor="@color/black"
                android:padding="20dp"/>

            <Button style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Use my vehicle"
                android:textColor="@color/colorPrimary"
                android:id="@+id/offer_my_vehicle_button"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:visibility="gone"/>
        </RelativeLayout>

        <View style="@style/horizontal_divider"
            android:layout_height="1dp" />


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Vehicle Type"
            android:id="@+id/field_offer_vehicle_type"
            android:maxLines="1"
            style="@style/FullWidthEditText"/>

        <View style="@style/horizontal_divider"
            android:layout_height="1dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Manufacturer and model"
            android:id="@+id/field_offer_vehicle_model"
            android:maxLines="1"
            android:ellipsize="end"
            style="@style/FullWidthEditText"/>

        <View style="@style/horizontal_divider"
            android:layout_height="1dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1.0"
            >
            <EditText style="@style/FullWidthEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:layout_weight="0.6"
                android:hint="Vehicle color"
                android:id="@+id/field_offer_vehicle_color"/>
            <View style="@style/vertical_divider"
                android:layout_width="1dp" />
            <EditText style="@style/FullWidthEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:layout_weight="0.4"
                android:hint="Plate number"
                android:id="@+id/field_offer_vehicle_plate_no"/>

        </LinearLayout>


        <!--<View style="@style/horizontal_divider"-->
            <!--android:id="@+id/divider"-->
            <!--android:layout_height="2dp"-->
            <!--android:layout_below="@+id/date_picker"-->
            <!--android:layout_marginTop="4dp"-->
            <!--android:layout_marginBottom="4dp"/>-->
        <View style="@style/horizontal_divider"
            android:layout_height="1dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date and Time"
            android:textSize="@dimen/abc_text_size_subhead_material"
            android:textColor="@color/black"
            android:paddingTop="32dp"
            android:paddingLeft="20dp"
            android:paddingBottom="10dp"/>

        <com.simplicityapks.reminderdatepicker.lib.ReminderDatePicker
            android:id="@+id/offer_date_picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"/>


    </LinearLayout>


</android.support.v4.widget.NestedScrollView>
