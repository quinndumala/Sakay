<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="1dp" android:layout_marginBottom="1dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/notif_photo"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_profile_photo" />
        <include layout="@layout/include_notification_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_toRightOf="@id/notif_photo"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>