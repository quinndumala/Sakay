<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_sakay_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.quinn.sakay.SakayDetailActivity"
    tools:showIn="@layout/activity_sakay_detail"
    style="@style/NoPaddingBottom">
    <TextView
        android:id="@+id/sakay_detail_other_author"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="You'll be driving for/riding with "
        android:textSize="18sp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/sakay_detail_date_and_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sakay_detail_other_author"
        android:layout_marginTop="12dp"
        android:text="date and time"
        android:textSize="15sp"/>
    <TextView
        android:id="@+id/sakay_detail_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sakay_detail_date_and_time"
        android:layout_marginTop="12dp"
        android:text="Pickup Location"
        android:textSize="15sp"/>
    <TextView
        android:id="@+id/sakay_detail_destination"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sakay_detail_start"
        android:text="Destination"
        android:textSize="15sp"
        android:paddingTop="4dp"/>
    <TextView
        android:id="@+id/sakay_detail_vehicle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sakay_detail_destination"
        android:layout_marginTop="4dp"
        android:text="Vehicle to be used"
        android:textSize="15sp"/>

</RelativeLayout>
